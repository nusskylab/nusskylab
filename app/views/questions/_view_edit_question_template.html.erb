<div class="card-body">
  <div class="view-question-template">
    <%= render 'questions/question_template', locals: {
      question: locals[:question],
      question_response: locals[:question_response]
    } %>
  </div>
  <div class="edit-question-template" style="display: none;">
    <%= render 'questions/question_template_form', locals: {
      question: locals[:question], is_new: false
    } %>
    <div class="row">
      <div class="offset-sm-4 col-sm-8">
        <%= link_to "Delete question", question_path(locals[:question]), remote: true, method: :delete, class: 'btn btn-danger question-delete-link' %>
      </div>
    </div>
  </div>
  <a class="btn btn-primary toggle-view-edit-question-link" role="button" href="#">Edit-question Form</a>
</div>
