<%= simple_form_for(locals[:question], wrapper: :vertical_form, remote: true,
        url: locals[:is_new] ? questions_path : question_path(locals[:question])) do |f| %>
    <%= f.error_notification %>
    <%= f.hidden_field :survey_template_id %>
    <%= f.input :question_type, collection: Question.question_types, include_blank: false, selected: Question.question_types[locals[:question].question_type] %>
    <%= f.input :title %>
    <%= f.input :instruction, input_html: {rows: 5} %>
    <%= f.input :content, input_html: {rows: 10}, hint: 'Use """["option 1", "option 2"]""" as format for multiple choice/select questions. Write placefolder text for text questions.' %>
    <%= f.input :extras, input_html: {rows: 10}, hint: 'Use """{"attr 1": "value 1", "attr 2": "value 2"}""" as format' %>
    <%= f.input :order %>
    <%= f.input_field :is_public, inline_label: "Is public" %>
    <%= f.button :submit_centred, class: 'btn-success' %>
<% end %>
