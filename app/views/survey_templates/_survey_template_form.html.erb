<%= simple_form_for(locals[:survey_template], wrapper: :vertical_form,
        url: {action: (locals[:is_new] ? 'create' : 'update')}) do |f| %>
    <%= f.error_notification %>
    <%= f.input :milestone_id, collection: locals[:milestones].map {|m| ["#{m.name} - (#{m.cohort})", m.id]}, include_blank: false %>
    <%= f.input :survey_type, collection: SurveyTemplate.survey_types, include_blank: false,
        selected: SurveyTemplate.survey_types[locals[:survey_template].survey_type] %>
    <%= f.input :instruction, input_html: {rows: 10} %>
    <%= f.input :deadline, as: :string, input_html: { value: (l(f.object.deadline) if f.object.deadline), class: 'datetime-picker', placeholder: "e.g. 2019-12-13 4:20 AM" } %>
    <%= f.button :submit_centred, class: 'btn-success' %>
<% end %>
