<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Milestone:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= locals[:survey_template].milestone.name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Survey type:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= locals[:survey_template].survey_type %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Instruction:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= locals[:survey_template].instruction %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Deadline:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= locals[:survey_template].deadline == nil ? "": l {locals[:survey_template].deadline} %></p>
    </div>
  </div>
</div>
