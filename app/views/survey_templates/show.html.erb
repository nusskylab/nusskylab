<% content_for :main_content do %>
    <% javascript 'survey_templates.js' %>
    <div class="row">
      <h3 class="col text-center">Survey Template</h3>
    </div>
    <div id="survey_template_view" class="card">
      <div class="card-body">
        <div class="card-title"> Information </div>
        <%= render 'survey_template_view', locals: {survey_template: @survey_template} %>
      </div>
    </div>
    <br/>
    <div id="survey-template-questions">
      <% @survey_template.questions.order('questions.order ASC').each do |question| %>
        <div class="card">
          <%= render 'questions/view_edit_question_template', locals: {
              question: question,
              question_response: nil
          } %>
        </div>
        <br/>
      <% end %>
    </div>
    <div class="col-sm-12 text-right">
      <a class="btn btn-primary" id="new-template-toggle" role="button" data-toggle="collapse" href="#create-question-form" aria-expanded="false" aria-controls="create-question-form">
        Create-question Form
      </a>
      <div class="collapse text-left" id="create-question-form">
        <div>
          <%= render 'questions/question_template_form', locals: {question: new_question, is_new: true} %>
        </div>
      </div>
    </div>
<% end %>
