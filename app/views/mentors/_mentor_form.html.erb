<%= simple_form_for(locals[:mentor], wrapper: :horizontal_form, html: {class: 'form-horizontal'},
                    url: {action: (locals[:is_new] ? 'create' : 'update')}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :user_id, collection: locals[:users].map {|user| [user.user_name, user.id]}, include_blank: false, required: true %>
  <%= f.input :slide_link, placeholder: true, placeholder: 'Enter in url form e.g. https//...' %>
  <% if locals[:is_new] %>
    <input type="hidden" name="mentor[cohort]" value="<%= locals[:cohort] %>">
  <% end %>
  <%= f.button :submit_centred, class: 'btn-success' %>
<% end %>
