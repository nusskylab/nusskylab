<% content_for :main_content do %>
  <% javascript 'mentors.js' %>
  <div class="row">
    <h3 class="col text-right">All Mentors in cohort <%= cohort %></h3>    
    <div class="col text-right">
      <%= link_to 'Create New Mentor', new_mentor_path(cohort: cohort), class: 'btn btn-success' %>
    </div>
  </div>
  <%= render 'mentors_table', locals: {mentors: @roles} %>
  <ul class="nav col-sm-12">
    <% all_cohorts.each do |cohort| %>
      <li class="nav-item col-sm-2">
        <%= link_to cohort, mentors_path(cohort: cohort), class: 'btn btn-info' %>
      </li>
    <% end %>
  </ul>
<% end %>
