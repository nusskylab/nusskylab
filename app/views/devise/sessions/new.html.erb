<% content_for :main_content do %>
  <h2 class="text-center">Log in</h2>

  <%= simple_form_for(resource, as: resource_name,
                    url: session_path(resource_name),
                    html: {class: 'form form-horizontal'}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, wrapper_html: { class: 'row' } %>
      <%= f.input :password, required: true, wrapper_html: { class: 'row' } %>
      <div class="form-group row">
        <div class="offset-md-3 col-md-9">
          <div class="form-check">
            <%= f.input_field :remember_me, inline_label: 'Remember me', wrapper_html: { class: 'row' }, as: :boolean if devise_mapping.rememberable?%>
          </div>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit_centred,'Log in', class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
<% end %>
