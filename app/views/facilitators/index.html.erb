<% content_for :main_content do %>
  <% javascript 'facilitators.js' %>
  <div class="row">
    <h3 class="col text-right">All Facilitators in cohort <%= cohort %></h3>
    <div class="col text-right">
      <%= link_to 'Create New Facilitator', new_facilitator_path(cohort: cohort), class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <%= render 'facilitators_table', locals: {facilitators: @roles} %>
  </div>
  <ul class="nav col-sm-12">
    <% all_cohorts.each do |cohort| %>
      <li class="nav-item col-sm-2">
        <%= link_to cohort, facilitators_path(cohort: cohort), class: 'btn btn-info' %>
      </li>
    <% end %>
  </ul>
<% end %>
