<div class="row">  
  <p class="col-sm-6 text-sm-right">Team name:</p>
  <p class="col-sm-6">
    <% if locals[:team].has_dropped %>
      <span data-toggle="tooltip" data-placement="top" title="<%= I18n.t('teams.has_dropped_tooltip') %>">
        <del><%= locals[:team].team_name %></del>
      </span>
    <% else %>
      <span><%= locals[:team].team_name %></span>
    <% end %>
  </p>
  <p class="col-sm-6 text-sm-right">Project level:</p>
  <p class="col-sm-6"><%= locals[:team].get_project_level %></p>
  <p class="col-sm-6 text-sm-right">Members:</p>
  <p class="col-sm-6">
    <% locals[:team].students.each do |student| %>
      <a class="btn btn-info btn-sm" href="<%= student_path(student) %>">
        <%= student.user.user_name %>
      </a>&nbsp;&nbsp;
    <% end %>
    <% if locals[:team].students.length == 0 %>
      <span class="text-muted">No students in this team</span>
    <% end %>
  </p>
  <p class="col-sm-6 text-sm-right">Evaluated teams:</p>
  <p class="col-sm-6">
    <% locals[:team].evaluateds.each do |evaluated| %>
      <a class="btn btn-info btn-sm"
          href="<%= team_path(evaluated.evaluated) %>">
        <%= evaluated.evaluated.team_name %>
      </a>&nbsp;&nbsp;
    <% end %>
    <% if locals[:team].evaluateds.length == 0 %>
      <span class="text-muted">Not evaluated teams assigned to this team</span>
    <% end %>
  </p>
  <p class="col-sm-6 text-sm-right">Evaluator teams:</p>
  <p class="col-sm-6">
    <% locals[:team].evaluators.each do |evaluator| %>
      <a class="btn btn-info btn-sm"
          href="<%= team_path(evaluator.evaluator) %>">
        <%= evaluator.evaluator.team_name %>
      </a>&nbsp;&nbsp;
    <% end %>
    <% if locals[:team].evaluateds.length == 0 %>
      <span class="text-muted">Not evaluated teams assigned to this team</span>
    <% end %>
  </p>
  <p class="col-sm-6 text-sm-right">Adviser:</p>
  <p class="col-sm-6">
    <%= locals[:team].adviser ? locals[:team].adviser.user.user_name : 'Nil' %>
  </p>
  <p class="col-sm-6 text-sm-right">Mentor:</p>
  <p class="col-sm-6">
    <%= locals[:team].mentor ? locals[:team].mentor.user.user_name : 'Nil' %>
  </p>
  <p class="col-sm-6 text-sm-right">Poster link:</p>
  <p class="col-sm-6">
    <a href="<%=locals[:team].poster_link%>">
      <%= locals[:team].poster_link ? locals[:team].poster_link : 'Nil' %>
    </a>
  </p>
  <p class="col-sm-6 text-sm-right">Video link:</p>
  <p class="col-sm-6">
    <a href="<%=locals[:team].video_link%>">
      <%= locals[:team].video_link ? locals[:team].video_link : 'Nil' %>
    </a>
  </p>
  <p class="col-sm-6 text-sm-right">Status:</p>
  <p class="col-sm-6">
    <%= locals[:team].get_team_status %>
  </p>
  <p class="col-sm-6 text-sm-right">Comment:</p>
  <p class="col-sm-6">
    <%= locals[:team].comment %>
  </p>
</div>
