<% content_for :main_content do %>
  <% javascript 'advisers.js' %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="text-center">All Advisers in cohort <%= cohort %></h3>
    </div>
    <div class="panel-body">
      <div class="col-sm-12">
        <div class="col-sm-2 col-sm-offset-3">
          <%= link_to 'Download CSV', advisers_path(format: 'csv'), class: 'btn btn-primary' %>
        </div>
        <div class="col-sm-2 col-sm-offset-3">
          <a href="<%= new_adviser_path(cohort: cohort) %>", class="btn btn-success">Create New Adviser</a>
        </div>
      </div>
      <br><br><hr>
      <div class="col-sm-12">
        <% all_cohorts.each do |cohort| %>
        <div class="col-sm-2">
          <%= link_to cohort, advisers_path(cohort: cohort), class: 'btn btn-info' %>
        </div>
        <% end %>
      </div>
      <br><br><hr> 
      <%= render 'advisers_table', locals: {advisers: @roles} %>
      <hr>
      <div class="col-sm-12">
        <% all_cohorts.each do |cohort| %>
        <div class="col-sm-2">
          <%= link_to cohort, advisers_path(cohort: cohort), class: 'btn btn-info' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
