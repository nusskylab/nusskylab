<% content_for :main_content do %>
  <% javascript 'evaluatings.js' %>
  <div class="row">
    <h3 class="col text-right">Evaluating relations in cohort <%= cohort %></h3>
    <div class="col text-right">
      <%= link_to 'Create New Evaluation Relationship', new_evaluating_path(cohort: cohort), class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <%= render 'evaluatings_table', locals: {evaluatings: @evaluatings} %>
  </div>
  <ul class="nav col-sm-12">
    <% all_cohorts.each do |cohort| %>
      <li class="nav-item col-sm-2">
        <%= link_to cohort, evaluatings_path(cohort: cohort), class: 'btn btn-info' %>
      </li>
    <% end %>
  </ul>
<% end %>
