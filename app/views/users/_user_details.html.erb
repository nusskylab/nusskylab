<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">User details</h3>
  </div>
  <div class="panel-body">
    <div class="col-sm-2">Username:</div>
    <div class="col-sm-10"><%= locals[:user].user_name %></div>
    <div class="col-sm-2">Email:</div>
    <div class="col-sm-10"><%= locals[:user].email %></div>
    <div class="col-sm-2">OpenID provider:</div>
    <div class="col-sm-10"><%= locals[:user].provider %></div>
    <div class="col-sm-2">OpenID UID:</div>
    <div class="col-sm-10"><%= locals[:user].uid %></div>
    <div class="col-sm-2">Gravatar Icon:</div>
    <div class="col-sm-10"><%= image_tag locals[:user].gravatar_url(size: 150) %>
  </div>
</div>
