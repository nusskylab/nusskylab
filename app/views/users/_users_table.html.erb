<table class="table table-hover table-sortable">
  <thead>
  <tr><th class="unsortable sort-index">Index</th><th>User ID</th><th>User Name</th><th>Creation Date</th><th>User Email</th><th class="unsortable">Actions</th></tr>
  </thead>
  <tbody>
  <% locals[:users].each_with_index do |user, idx| %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= user.id %></td>
        <td><%= user.user_name %></td>
	      <td><%= l user.created_at %></td>
        <td><%= user.email %></td>
        <td>
          <a class="btn btn-primary btn-xs" href="<%=  user_path(user.id) %>">View</a>
          <a class="btn btn-default btn-xs" href="<%= edit_user_path(user.id) %>">Edit</a>
          <%= link_to 'Preview as', preview_as_user_path(user.id), method: :post, class: 'btn btn-warning btn-xs' %>
          <%= link_to 'Delete', user_path(user.id), method: :delete, class: 'btn btn-danger btn-xs',
            data: { confirm: 'Are you sure you want to delete this user? (Associated roles have to deleted first)' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
