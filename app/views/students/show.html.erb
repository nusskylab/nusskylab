<% content_for :main_content do %>
  <% javascript 'students.js' %>
  <% stu = Student.find_by(id: @role.id)%>
  <% status = get_student_team_application_status(stu) %>
  <% if  Time.now + 8.hours > get_portal_open_date and status == 'success'%>
    <%= render 'student_with_team', locals: {
      student: stu, role_data: role_data
    } %>
  <% else %>
    <%= render 'student_pending', locals: { student: stu , status: status} %>
  <% end %>
<% end %>
