<% content_for :main_content do %>
  <% javascript 'students.js' %>
  <% if @role.is_pending %>
    <%= render 'student_pending', locals: { student: @role } %>
  <% elsif @role.team_id.blank? %>
    <%= render :template => 'users/show'%>
  <% else %>
    <%= render 'student_with_team', locals: {
      student: @role, role_data: role_data
    } %>
  <% end %>
<% end %>
