<%= simple_form_for(locals[:student], wrapper: :horizontal_form, html: {class: 'form-horizontal'},
                    url: {action: 'create'}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :user_id, collection: locals[:users].map {|user| [user.user_name, user.id]}, include_blank: false, required: true %>
  <% if locals[:is_new] %>
    <input type="hidden" name="student[cohort]" value="<%= locals[:cohort] %>">
  <% end %>
  <%= f.button :submit_centred, class: 'btn-success' %>
<% end %>
