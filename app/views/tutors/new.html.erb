<% content_for :main_content do %>
  <% javascript 'tutors.js' %>
  <div class="panel panel-default">
    <div class="panel-heading text-center">
      <h2>
        Create an tutor in cohort <%= cohort %>
      </h2>
    </div>
    <div class="panel-body">
      <%= render 'tutor_form', locals: {
        tutor: @role, users: users, cohort: cohort, is_new: true
      } %>
    </div>
  </div>
<% end %>
