<% content_for :main_content do %>
  <% javascript 'tutors.js' %>
  <div class="row">
    <h3 class="col text-right">All Tutors in cohort <%= cohort %></h3>
    <div class="col text-right">
      <%= link_to 'Create New Tutor', new_tutor_path(cohort: cohort), class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <%= render 'tutors_table', locals: {tutors: @roles} %>
  </div>  
  <ul class="nav col-sm-12">
    <% all_cohorts.each do |cohort| %>
      <li class="nav-item col-sm-2">
        <%= link_to cohort, tutors_path(cohort: cohort), class: 'btn btn-info' %>
      </li>
    <% end %>
  </ul>
<% end %>
