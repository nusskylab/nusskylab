<table class="table table-hover">
  <thead>
  <tr><th>Milestone name</th><th>Submission Deadline</th><th>Evaluation Deadline</th><th>Cohort</th><th>Actions</th></tr>
  </thead>
  <tbody>
  <% @milestones.each do |milestone| %>
      <tr>
        <td><%= milestone.name %></td>
        <td><%= l milestone.submission_deadline %></td>
        <td><%= l milestone.peer_evaluation_deadline %></td>
        <td><%= milestone.cohort %></td>
        <td>
          <a class="btn btn-primary btn-xs" href="<%=  milestone_path(milestone.id) %>">View</a>
          <a class="btn btn-default btn-xs" href="<%= edit_milestone_path(milestone.id) %>">Edit</a>
          <%= link_to 'Delete', milestone_path(milestone.id), method: :delete, class: 'btn btn-danger btn-xs',
            data: { confirm: 'Are you sure you want to delete this milestone?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
