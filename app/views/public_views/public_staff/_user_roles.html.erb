<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center"><%= locals[:selected_type] %></h3>
    <div class="text-center">
      <% if locals[:selected_type] == "Mentors" %>
        <%= link_to " View All Mentors Slides", public_views_mentor_slides_path, class: "btn btn-success", target: "_blank" %>
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <% if locals[:roles] && locals[:roles].length > 0 %>
      <% locals[:roles].each do |role| %>
        <!-- Filters out sample data ending with @example.com -->
        <% if not role.user.email.end_with? "@example.com" %>
          <div class="row">
            <div class="col-md-3">
              <%= image_tag role.user.gravatar_url(size: 150) %>
            </div>
            <div class="col-md-9">
              <div>Name: <strong><%= role.user.user_name %></strong></div>
              <div class="automail">Email: <a href="mailto:<%= role.user.email %>"><%= role.user.email %></a></div>
              <div class="autolink">GitHub: <a href='<%= role.user.github_link %>'><%= role.user.github_link %></a></div>
              <div class="autolink">LinkedIn: <a href='<%= role.user.linkedin_link %>'><%= role.user.linkedin_link %></a></div>
              <div class="autolink">Personal website: <a href='<%= role.user.blog_link %>'><%= role.user.blog_link %></a></div>
              <div class="autolink">Self Introduction: <%= role.user.self_introduction %></div>
              <% if locals[:selected_type] == "Advisers" %>
                <%= link_to "Carousel Link", public_views_group_carousel_index_path(id: role.team_ids), class: "btn btn-success", target: "_blank" %>
              <% end %>
            </div>
          </div>
          <br>
          <hr>
          <br>
        <% end %>
      <% end %>
    <% else %>
      No data to show
    <% end %>
  </div>
</div>
