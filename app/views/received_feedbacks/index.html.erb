<% content_for :main_content do %>
    <% javascript 'received_feedbacks.js' %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>
          All feedback for
          <% if @team %>
              <%= @team.team_name %>
          <% elsif @adviser %>
              <%= @adviser.user.user_name %>
          <% end %>
        </h1>
      </div>
      <div class="panel-body">
        <% if @feedbacks.nil? or @feedbacks.length == 0 %>
            No feedback available
        <% end %>
        <% @feedbacks.each_with_index do |feedback, idx| %>
            <div class="panel panel-primary">
              <div class="panel-heading">
                <label>Feedback <%= idx + 1 %></label>
              </div>
              <div class="panel-body">
                <%= render 'feedbacks/view_feedback', locals: {feedback: feedback} %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
<% end %>
